<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:paddingLeft="10dp"
    android:background="#111111"
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/icon"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:textColor="#C49246"
        android:paddingBottom="2dip"
        android:paddingTop="6dip"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/summonerLevel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/icon"
        android:layout_below="@id/name"
        android:layout_marginLeft="20dp"
        android:textColor="#C49246"
        android:paddingBottom="2dip"
        android:paddingTop="6dip"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/games"
        android:orientation="vertical"
        android:layout_below="@id/icon">

        <TextView
            android:id="@+id/rankedStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/ranked_stats"
            android:textSize="16sp"
            android:textColor="#C49246"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:id="@+id/rankedLeague"
            android:textColor="#C49246"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:id="@+id/rankedWins"
            android:textColor="#C49246"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:id="@+id/rankedLosses"
            android:textColor="#C49246"

            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/games"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/runes"
            android:layout_marginTop="20dp"
            android:background="#282828"
            android:textColor="#C49246"
            android:layout_gravity="center"
            android:text = "@string/view_runes"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/masteries"
            android:background="#282828"
            android:textColor="#C49246"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text ="@string/view_masteries"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/history"
            android:background="#282828"
            android:textColor="#C49246"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/match_history"/>

    </LinearLayout>

</RelativeLayout>